<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:avaloniaEdit="https://github.com/avaloniaui/avaloniaedit"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Manager.GUI.Controls.NginxCodeEditor"
             x:Name="Root">

    <avaloniaEdit:TextEditor Name="Editor"
                             ShowLineNumbers="True"
                             HorizontalScrollBarVisibility="Auto"
                             VerticalScrollBarVisibility="Visible"
                             FontFamily="{Binding FontFamily, ElementName=Root}"
                             FontSize="{Binding FontSize, ElementName=Root}">
        <avaloniaEdit:TextEditor.ContextMenu>
            <ContextMenu>
                <MenuItem Header="Cut" Command="{Binding Cut, ElementName=Editor}" />
                <MenuItem Header="Copy" Command="{Binding Copy, ElementName=Editor}" />
                <MenuItem Header="Paste" Command="{Binding Paste, ElementName=Editor}" />
                <Separator />
                <MenuItem Header="âœ¨ AI: Explain Selection" 
                          Command="{Binding #Root.ExecuteExplainCommand}"
                          InputGesture="Ctrl+E"/>

                <MenuItem Header="ðŸ”§ AI: Fix/Optimize Selection" 
                          Command="{Binding #Root.ExecuteFixCommand}"
                          InputGesture="Ctrl+F"/>
            </ContextMenu>
        </avaloniaEdit:TextEditor.ContextMenu>
    </avaloniaEdit:TextEditor>
</UserControl>