<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:Manager.GUI.ViewModels"
             xmlns:models="using:Manager.Core.Features.Hosts"
             x:Class="Manager.GUI.Views.HostsView"
             x:DataType="vm:HostsViewModel">

    <Grid RowDefinitions="*, Auto" Margin="10">

        <DataGrid Grid.Row="0"
                  Name="HostEntriesGrid"
                  ItemsSource="{Binding VisibleHostEntries}"
                  SelectedItem="{Binding SelectedEntry}"
                  AutoGenerateColumns="False"
                  CanUserResizeColumns="True"
                  GridLinesVisibility="All"
                  BorderThickness="1" BorderBrush="Gray">
            <!-- <DataGrid.Styles> 
                <Style Selector="DataGridColumnHeader">
                    <Setter Property="Background" Value="SlateGray"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Style>
            </DataGrid.Styles>-->
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Active"
                                        Binding="{Binding IsActive}"
                                        IsReadOnly="False"
                                        Width="80" />

                <DataGridTextColumn Header="IP Address"
                                    Binding="{Binding IpAddress}"
                                    IsReadOnly="False"
                                    Width="150" />

                <DataGridTextColumn Header="Domains"
                                    Binding="{Binding HostNames}"
                                    IsReadOnly="False"
                                    Width="250" />

                <DataGridTextColumn Header="Comment"
                                    IsReadOnly="False"
                                    Binding="{Binding Comment}"
                                    Width="*" />
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="10" Margin="0,10,0,0" HorizontalAlignment="Right">
            <Button Command="{Binding AddEntryCommand}" Content="Add Entry" />
            <Button Command="{Binding RemoveEntryCommand}" Content="Remove" Background="#c0392b" Foreground="White"/>
            <Button Command="{Binding PreviewCommand}" Content="Preview" />
            <Button Command="{Binding SaveCommand}" Content="Save Changes" Background="#27ae60" Foreground="White" />
        </StackPanel>

    </Grid>
</UserControl>