<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:Manager.GUI.ViewModels"
        xmlns:controls="using:Manager.GUI.Controls"
        mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="500"
        x:Class="Manager.GUI.Views.NginxSnippetEditorWindow"
        x:DataType="vm:NginxSnippetEditorViewModel"
        Title="Edit Snippet"
        Width="800" Height="600"
        WindowStartupLocation="CenterOwner"
        Background="#1e1e1e">

    <Grid RowDefinitions="Auto, *, Auto" Margin="15">
        
        <StackPanel Grid.Row="0" Spacing="10" Margin="0,0,0,15">
            <TextBlock Text="Edit Snippet" FontSize="20" FontWeight="Bold" Foreground="#eee"/>
            
            <Grid ColumnDefinitions="Auto, *" RowDefinitions="Auto, Auto">
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Name:" VerticalAlignment="Center" Width="80"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Name}" Margin="0,0,0,5"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Description:" VerticalAlignment="Center" Width="80"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Description}"/>
            </Grid>
        </StackPanel>

        <Border Grid.Row="1" BorderBrush="#333" BorderThickness="1">
            <controls:NginxCodeEditor Text="{Binding Content}"
                                      SelectedTheme="{Binding EditorTheme}"
                                      FontFamily="{Binding EditorFontFamily}"
                                      FontSize="{Binding EditorFontSize}"/>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0,15,0,0">
            <Button Command="{Binding CancelCommand}" Content="Cancel"/>
            <Button Command="{Binding SaveCommand}" Content="Save Changes" Background="#27ae60" Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>